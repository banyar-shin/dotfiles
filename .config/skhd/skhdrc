# ----------------------------- YABAI COMMANDS -----------------------------

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service

# ----------------------------- SPACE COMMANDS -----------------------------

# Focus previous space by mission-control index
ctrl - h : yabai -m space --focus prev || yabai -m space --focus last

# Focus next space by mission-control index
ctrl - l : yabai -m space --focus next || yabai -m space --focus first

# Focus space with mission-control
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5

# move window to space #
ctrl + shift - 1 : yabai -m window --space 1; yabai -m window --focus recent
ctrl + shift - 2 : yabai -m window --space 2; yabai -m window --focus recent
ctrl + shift - 3 : yabai -m window --space 3; yabai -m window --focus recent
ctrl + shift - 4 : yabai -m window --space 4; yabai -m window --focus recent
ctrl + shift - 5 : yabai -m window --space 5; yabai -m window --focus recent

# move window to prev and next space
ctrl + shift - h : yabai -m window --space prev; yabai -m space --focus prev
ctrl + shift - l : yabai -m window --space next; yabai -m space --focus next 

# move window to display left and right
ctrl + shift - left : yabai -m window --display west; yabai -m display --focus west;
ctrl + shift - right : yabai -m window --display east; yabai -m display --focus east;

# ----------------------------- WITHIN A SPACE COMMANDS -----------------------------

# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# rotate layout clockwise
alt - r : yabai -m space --rotate 270

# toggle window float
alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
alt - return : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
alt - e : yabai -m space --balance

# swap windows
alt + shift - j : yabai -m window --swap south
alt + shift - k : yabai -m window --swap north
alt + shift - h : yabai -m window --swap west
alt + shift - l : yabai -m window --swap east

# move window
alt + shift - a : yabai -m window --move rel:-20:0
alt + shift - s : yabai -m window --move rel:0:20
alt + shift - w : yabai -m window --move rel:0:-20
alt + shift - d : yabai -m window --move rel:20:0

# adjust window size
cmd + alt - h : yabai -m window --resize left:-20:0 || yabai -m window --resize right:-20:0
cmd + alt - j : yabai -m window --resize bottom:0:20
cmd + alt - k : yabai -m window --resize top:0:-20 || yabai -m window --resize bottom:0:-20
cmd + alt - l : yabai -m window --resize right:20:0

# adjust window opacity
alt - o : yabai -m window --opacity 1.0
alt + shift - o : yabai -m window --opacity 0.0

# launch apps
cmd - return : open -na kitty
cmd + shift - return : open -na Firefox
